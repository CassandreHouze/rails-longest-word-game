<div class="container">
  <h2 class="text-center py-5">NEW GAME</h2>
  <div class="row">
    <% @grid.each do |letter| %>
      <div class="col border case">
        <%= letter %>
      </div>
    <% end %>
  </div>

  <br>
  <br>

  <div class="text-center">
    <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid %>
    <input type="text" name="word" placeholder="Longest word">
    <input type="submit">
    </form>
  </div>
</div>
</div>

